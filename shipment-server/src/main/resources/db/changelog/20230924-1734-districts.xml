<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20230924-1734-districts.xml" author="nguyenanhtu002">
        <createTable tableName="districts">
            <column name="code" type="varchar(255)">
                <constraints primaryKey="true" primaryKeyName="PK_districts_code"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="name_en" type="varchar(255)"/>
            <column name="full_name" type="varchar(255)"/>
            <column name="full_name_en" type="varchar(255)"/>
            <column name="code_name" type="varchar(255)"/>
            <column name="province_code" type="varchar(255)">
                <constraints foreignKeyName="FK_districts_province_code"
                             references="provinces(code)"/>
            </column>
            <column name="created_at" type="bigint"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="last_updated_at" type="bigint"/>
            <column name="last_updated_by" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>